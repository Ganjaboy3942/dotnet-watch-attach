{
  "name": "dotnetwatchattach",
  "displayName": "Dotnet Watch Attach",
  "description": "Wrapper for coreclr attach which automatically attaches when a given program gets launched.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Debuggers"
  ],
  "extensionDependencies": [
    "ms-dotnettools.csharp"
  ],
  "activationEvents": [
    "onDebugResolve:dotnetwatchattach"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "debuggers": [
      {
        "type": "dotnetwatchattach",
        "label": ".NET Watch Attach",
        "configurationAttributes": {
          "attach": {
            "properties": {
              "args": {
                "type": "object",
                "Description": "Arguments passed to coreclr attach"
              },
              "program": {
                "type": "string",
                "Description": "Name of exe that dotnet attach has to attach to"
              }
            }
          }
        },
        "configurationSnippets": [
          {
            "label": ".NET: Watch Attach",
            "description": "Wrapper for coreclr attach which automatically attaches upon recompilation of your .NET application",
            "body": {
              "type": "dotnetwatchattach",
              "request": "launch",
              "name": ".NET Watch Attach",
              "args": {
                "env": {
                  "ASPNETCORE_ENVIRONMENT": "Development"
                }
              },
              "program": "<startup-project-name>.exe"
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.61.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "typescript": "^4.4.3",
    "@vscode/test-electron": "^1.6.2"
  },
  "dependencies": {
    "rxjs": "^7.4.0",
    "vscode-debugadapter": "^1.49.0"
  }
}
